<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

        <TextView
            android:layout_width="225dp"
            android:layout_height="100dp"
            android:text="Induction Burner Control Panel"
            android:id="@+id/headerTextView"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REFRESH"
        android:id="@+id/getButton"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/getTextView"
        android:layout_alignStart="@+id/getTextView"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET"
            android:id="@+id/postButton"
        android:layout_alignBaseline="@+id/getButton"
        android:layout_alignBottom="@+id/getButton"
        android:layout_toRightOf="@+id/getButton"
        android:layout_toEndOf="@+id/getButton" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Press REFRESH to update temp"
        android:id="@+id/getTextView"
        android:textSize="24sp"
        android:focusableInTouchMode="true"
        android:layout_above="@+id/getButton"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <TextView
        android:text="Burner Power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/toggleButton"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>